<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_sites_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_site_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_site_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.site.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @site.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.site.domain", :default => t("activerecord.labels.domain", :default => "Domain")) %>:</b>
          <%= @site.domain %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.site.is_default", :default => t("activerecord.labels.is_default", :default => "Is default")) %>:</b>
          <%= @site.is_default %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_site_path(@site), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_site_path(@site), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>