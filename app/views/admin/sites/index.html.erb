<% @sites.each do |site| %>
  <tr>
    <td><%= site.title %></td>
    <td><%= site.domain %></td>
    <td><%= link_to 'Show', [:admin, site] %></td>
    <td><%= link_to 'Edit', edit_admin_site_path(site) %></td>
    <td><%= link_to 'Destroy', [:admin, site], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

