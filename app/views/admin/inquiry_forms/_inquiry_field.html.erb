<li class="nested_fields">
  <br />
  <%= f.hidden_field :id, :as=>:hidden %>
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.inquiry_field.name", :default => "Name"), :class=>"label"%>
    <%= f.text_field :name %>
  </div>
  <div class="group">
    <%= f.label :identifier, t("activerecord.attributes.inquiry_field.identifier", :default => "Identifier"), :class=>"label"%>
    <%= f.text_field :identifier %>
  </div>
  <div class="group">
    <%= f.label :field_type, t("activerecord.attributes.inquiry_field.field_type", :default => "Field type"), :class=>"label" %>
    <%= f.select :field_type, options_for_select(InquiryField::FIELD_TYPES, f.object.field_type) %>
  </div>
  <div class="group">
    <%= f.label :field_options, t("activerecord.attributes.inquiry_field.field_options", :default => "Field options"), :class=>"label" %>
    <%= f.text_field :field_options %>
  </div>
  <div class="group">
    <%= f.label :_destroy, :class=>"label" %>
    <%= f.check_box :_destroy, :class=>"destroy_nested" %>
  </div>
</li>
